.row.main-auth-row
  .col-xs-12
    .row
      .col-xs-12
        .auth-form-container.auth-form-container-size
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = devise_error_messages!
            = f.text_field :email, placeholder: 'email', class: 'auth-input'
            = f.password_field :password, placeholder: 'password', class: 'auth-input'
            = f.submit 'Log In', class: 'btn btn-success button-auth'
          %p.auth-users-shared-links
            = render "users/shared/links"
          .row
            .col-xs-4.col-xs-offset-1.col-sm-10.col-sm-offset-1.recaptcha-block
              -if cookies[:login_attempts].present? && cookies[:login_attempts].to_i >= 3
                = recaptcha_tags
          .auth-form-bottom-empty-space
