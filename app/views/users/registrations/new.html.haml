.row.main-sign-up-row
  .col-xs-12
    .row
      .col-xs-12
        .auth-form-container.auth-form-container-size
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            = f.text_field :name, :placeholder => 'name', :class => 'sign-up-input'
            = f.text_field :email, placeholder: 'email', :class => 'sign-up-input'
            = f.password_field :password, :placeholder => 'password', :class => 'sign-up-input'
            = f.password_field :password_confirmation, :placeholder => 'password_confirmation', :class => 'sign-up-input'
            = f.submit 'Sign Up', class: 'btn btn-success button-sign-up'
          = render "users/shared/links"

