.row.main-profile-row
  .col-xs-12
    .auth-form-container.auth-form-container-size
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        -if @user.avatar.present?
          .thumbnail#profile-img-thumbnail
            = image_tag "#{@user.avatar.small_thumb.url}", class: 'img-circle'
        = f.text_field :name, placeholder: true, class: 'auth-input', id: 'profile-name-input'
        = f.text_field :email, placeholder: 'email', class: 'auth-input', id: 'profile-email-input'
        = f.password_field :password, placeholder: true, class: 'auth-input', id: 'profile-pwd-input'
        = f.password_field :password_confirmation, placeholder: true, class: 'auth-input', id: 'profile-pwd-confirm-input'
        = f.password_field :current_password, autocomplete: 'off', placeholder: true, class: 'auth-input', id: 'profile-cur-pwd-input'
        %span.btn.btn-file{id: 'avatar-profile-button'}
          %p#p-profile-avatar
            %span
              = t('.choose_avatar')
          \#{f.file_field :avatar, id: 'avatar-profile'}
        = f.submit t('.update_account'), class: 'btn button-auth', id: 'btn-update-account'
      .cancel-account-part
        %p#p-cancel-account Want to cancel account?
        #{button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger btn-cancel-account", id: 'btn-cancel-account'}
      .profile-form-bottom-empty-space
