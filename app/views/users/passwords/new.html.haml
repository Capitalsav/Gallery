.row.forgot-pwd-main
  .container
    .row
      .col-xs-12
        .p.text-center
          %h2 Forgot your password?
    .row
      .col-xs-12
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .field
            .row
              .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
                = f.email_field :email, placeholder: 'email', autofocus: true, class: 'forgot-pwd-input', id: 'forgot-pwd-input'
          .actions
            .p.text-center
              = f.submit 'Send me reset password email',  class: 'btn btn-forgot-pwd', id: 'btn-forgot-pwd'
              %br
              = render "users/shared/links"
