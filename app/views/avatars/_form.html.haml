= form_for @avatar do |f|
  - if @avatar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@avatar.errors.count, "error")} prohibited this avatar from being saved:"
      %ul
        - @avatar.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :image
    %br/
    = f.file_field :image
    - if f.object.image?
      = image_tag form.object.image
      = f.label :remove_image
      = f.check_box :remove_image
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
