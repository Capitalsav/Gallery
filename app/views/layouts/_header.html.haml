%header.nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('.company_name'), root_path, class: "navbar-brand"

    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            = t('.categories')
            %span.caret
          %ul.dropdown-menu
            - @top_categories.each do |category|
              %li
                = link_to "#{category.name}", category_path(category.slug), :method => :get
            %li.divider
            %li
              = link_to t('.all_categories'), categories_path
        %li
          = link_to t('.images'), images_path
        %li
          = link_to t('.comments'), comments_path
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            = t('.language')
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'en', root_path(locale: :en)
            %li= link_to 'ru', root_path(locale: :ru)
        - if user_signed_in?
          %li
            = link_to t('.profile'), profile_path, {class: 'glyphicon glyphicon-user'}
          %li
            = link_to t('.logout'), destroy_user_session_path, method: :delete
        - else
          %li
            = link_to t('.sign_up'), new_user_registration_path, {class: 'glyphicon glyphicon-user'}
          %li
            = link_to t('.login'), new_user_session_path, {class: 'glyphicon glyphicon-log-in'}
