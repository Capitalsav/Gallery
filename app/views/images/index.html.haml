#images.section.md-padding.bg-grey
  .container
    .text-center
      = paginate @images, :theme => 'twitter-bootstrap-3'
    .row
      - @images.each do |image|
        .col-md-4.col-xs-6.images
          = image_tag image, class: 'img-responsive'
          .overlay
          .images-content
            %span Category
            %h3
              = image.model.category.name
            .images-link
              = link_to single_category_image_path(image.model.category.id, image.model.id), {class: 'lightbox'} do
                %i.fa.fa-picture-o
    .text-center
      = paginate @images, :theme => 'twitter-bootstrap-3'